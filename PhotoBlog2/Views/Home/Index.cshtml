@{
	ViewData["Title"] = "Home Page";
}
@model List<Gonderi>


<div class="gonderiler">
	@if (Context.Request.Query["Sonuc"] == "Eklendi")
	{
		<div class="alert alert-success">
			Gönderi başarıyla oluşturuldu.
		</div>
	}
	@if (Context.Request.Query["Sonuc"] == "Guncellendi")
	{
		<div class="alert alert-success">
			Gönderi başarıyla güncellendi.
		</div>
	}
	@if (Context.Request.Query["Sonuc"] == "Silindi")
	{
		<div class="alert alert-success">
			Gönderi başarıyla kaldırıldı.
		</div>
	}

	<div class="d-flex">
		<a asp-action="Yeni" asp-controller="Gonderiler" class="btn btn-success ms-auto mb-2">Yeni Gönderi ekle</a>
	</div>

	@foreach (Gonderi gonderi in Model)
	{
		<div class="mb-4 shadow p-2">
			<h4>@gonderi.Baslik</h4>
			<img class="w-100" src="~/img/upload/@gonderi.ResimYolu" />
			<div class="d-flex justify-content-end mt-2">
				<a class="btn btn-secondary me-2" asp-controller="Gonderiler" asp-action="Guncelle" asp-route-id="@gonderi.Id">Düzenle</a>
				<a class="btn btn-danger" asp-controller="Gonderiler" asp-action="Sil" asp-route-id="@gonderi.Id">Sil</a>
			</div>
		</div>
	}
</div>

